  </div>  <script>
    const quotes = [
      "You‚Äôve got this.",
      "Take a deep breath.",
      "Peace begins with you.",
      "One day at a time.",
      "Be kind to your mind."
    ];

    let quoteIndex = 0;
    setInterval(() => {
      document.getElementById("quote").innerText = quotes[quoteIndex];
      quoteIndex = (quoteIndex + 1) % quotes.length;
    }, 5000);

    function saveMood() {
      const mood = document.getElementById("mood").value;
      if (!mood) return;
      let moods = JSON.parse(localStorage.getItem("moods") || "[]");
      moods.push({ date: new Date().toLocaleDateString(), mood });
      localStorage.setItem("moods", JSON.stringify(moods));
      loadMoods();
    }

    function loadMoods() {
      const moodLog = document.getElementById("mood-log");
      let moods = JSON.parse(localStorage.getItem("moods") || "[]");
      moodLog.innerHTML = '<h4>üóìÔ∏è Your Mood History:</h4>' + moods.slice(-7).map(m => `
        <div>${m.date}: ${m.mood}</div>
      `).join("");
    }

    loadMoods();

    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('service-worker.js')
          .then(() => console.log('‚úÖ Service Worker Registered'))
          .catch(err => console.error('Service Worker Error:', err));
      });
    }
  </script></body>
